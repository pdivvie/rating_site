<main role="main" class="container light-theme">
  
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-3">
      <h1>Reviews</h1>
    </div>
    <div class="col-md-6">
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <h2>Business</h2>
    </div>
    <div class="col-md-2">
      <h2>Rating</h2>
    </div>
    <div class="col-md-2">
      <h2>Comment</h2>
    </div>
    <div class="col-md-2">
     <h2>Username</h2>
    </div>
  </div>

  <% @ratings.each do |rating| %>
    <% if rating.user_id == current_user.id %>
      <div class="row">
        <div class="col-md-2">
          <%= Business.find(rating.business_id).name %>
        </div>
        <div class="col-md-2">
          <div class="star-rating-show" data-score="<%= rating.stars %>"></div>
        </div>
        <div class="col-md-2">
          <%= rating.comment %>
        </div>
        <div class="col-md-2">
          <%= User.find(rating.user_id).username %>
        </div>
        <% if policy(rating).update? %>
          <div class="col-md-2">
            <%= link_to 'Edit review', edit_business_rating_path(rating.business_id, rating),class: "light-theme" %>
          </div>
          <div class="col-md-2">
            <%= link_to 'Delete review', business_rating_path(rating.business_id, rating),class: "light-theme", method: :delete %>
          </div>
        <% end %>
      </div>

      <br>

    <% end %>

  <% end %>
</main>

<script>
  $(document).ready(function(e) {  
    $('.star-rating-show').raty({
      readOnly: true,
      score: function() {
        return $(this).attr('data-score');
      },
      path: '/assets/'
    });
  });
</script>

