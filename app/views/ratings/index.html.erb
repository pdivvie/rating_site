<main role="main" class="container">
  
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-3">
      <h1>Reviews</h1>
    </div>
    <div class="col-md-6">
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <h2>Business</h2>
    </div>
    <div class="col-md-3">
      <h2>Rating</h2>
    </div>
    <div class="col-md-6">
      <h2>Comment</h2>
    </div>
  </div>

  <% @ratings.each do |rating| %>
    <div class="row">
      <div class="col-md-3">
        <%= Business.find(rating.business_id).name %>
      </div>
      <div class="col-md-3">
        <div class="star-rating-show" data-score="<%= rating.stars %>"></div>
      </div>
      <div class="col-md-6">
        <%= rating.comment %>
      </div>
    </div>

    <br>
    
  <% end %>
</main>

<script>
  $(document).ready(function(e) {  
    $('.star-rating-show').raty({
      readOnly: true,
      score: function() {
        return $(this).attr('data-score');
      },
      path: '/assets/'
    });
  });
</script>

