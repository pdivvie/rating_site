<%= form_for ([@location, @business, @rating]) do |form| %>
  <% if rating.errors.any? %>
    <% @rating.errors.full_messages.each do |error| %>
       <%= alert_generator error %>
      <% end %>
  <% end %>

  <div class="form-group">
    <div id="star-rating"></div>
  </div>

  <div class="form-group">
    <%= form.text_area :comment, rows: 15, placeholder: "Leave your comments here...\n\nRemember that you must be logged in as a user of this location and you cannot rate your own listings.", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>

<script>
  $(document).ready(function(e) {
    $('#star-rating').raty({
      path: '/assets/',
      scoreName: 'rating[stars]'
    });
  });
</script>
