<p id="notice"><%= notice %></p>

<h1>Portfolios</h1>

  <% @portfolios.each do |portfolio| %>
      <p><%= portfolio.title %></p>
      <p><%= portfolio.body %></p>
      <p><%= portfolio.rating %></p>
      <p><%= image_tag portfolio.thumb_image unless portfolio.thumb_image.nil? %>
      <p><%= link_to 'Show', portfolio %></p>
      <p><%= link_to 'Edit', edit_portfolio_path(portfolio) %></p>
      <p><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      <br>
  <% end %>



<%= link_to 'New Portfolio', new_portfolio_path %>
