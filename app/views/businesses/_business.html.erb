<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
</tr>

<% @businesses.each do |business| %>
  <tr>
    <td><%= business.name %></td>
    <td>
      <ul class="rating">
        <% form_id = "business_#{business.id}_rating" %>
        <%= form_for business.ratings.last || business.ratings.build, :html => {:id => "business_#{business.id}_rating", :class => "star_rating_form"} do |f| %>
          <%= f.hidden_field :business_id %>
          <%= f.hidden_field :stars, :id => "#{form_id}_stars" %>
        <% end %>
        <% (1..5).each do |i| %>
          <li class="rating_star" data-stars="<%= i %>" data-form-id="<%= form_id %>" id="<%= "#{form_id}_#{i}" %>"></li>
        <% end %>
      </ul>
    </td>
    <td><%= link_to 'Show', business %></td>
  </tr>
<% end %>
</table>

<br>