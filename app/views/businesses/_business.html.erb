<main role="main" class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="well">
        <div class="my-3 p-3 bg-white rounded shadow-sm">
          <div class="media text-muted pt-3">
            <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <strong class="d-block text-gray-dark"><%= business.name %></strong>
            <%= truncate(business.body, :length => 200) %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="row">
        <div class="col-md-6">
          <div class="well">
            <p><a class="btn btn-tertiary" href="businesses/<%= business.id %>" role="button">View details &raquo;</a></p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="well">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="well"><p><div class="star-rating" data-score="<%= business.ratings.average(:stars)%>"></div></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<script>
  $(document).ready(function(e) {  
    $('.star-rating').raty({
      readOnly: true,
      score: function() {
        return $(this).attr('data-score');
      },
      path: '/assets/'
    });
  });
</script>