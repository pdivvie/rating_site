<%= form_for ([@location, @business]) do |form| %>
  <% if business.errors.any? %>
    <% @business.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.text_field :name, placeholder: "Title of your service...", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.text_area :body, rows: 12, placeholder: "Describe your service here...", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.select :category_id, Category.all.collect { |cat| [ cat.name, cat.id ] }, include_blank: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.text_area :link, rows: 1, placeholder: 'Link to Website', class: 'form-control' %>
  </div>

  <div class="form-group">
    <label class="btn btn-primary">
      Upload an image or logo of your business <%= form.file_field :main_image, style: 'display:none;' %>
    </label>
  </div>

  <div class="form-group">
    <%= form.submit "Create Business", class: 'btn btn-primary' %>
  </div>
<% end %>
