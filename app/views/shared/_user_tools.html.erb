<% if current_user.is_a?(GuestUser) == false %>

  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= current_user.first_name + " " + current_user.last_name %>
    </a>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
      <% if params.has_key?(:location_id) %>
        <%= link_to "My Services", location_my_services_path(location_id: @location), class: 'dropdown-item' %>
        <%= link_to "My Suggestions", location_my_reviews_path(location_id: @location), class: 'dropdown-item' %>
        <%= link_to 'Create a new business', new_location_business_path(location_id: @location), class: "dropdown-item" %>
      <% end %>
      <%= link_to "Edit your profile", edit_user_registration_path, class: 'dropdown-item' %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
    </div>
  </li>

<% elsif current_user.is_a?(GuestUser) %>
  <li class="nav-item">
    <a class="nav-link" href="/register">Register</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/login">Login</a>
  </li>
<% end %>