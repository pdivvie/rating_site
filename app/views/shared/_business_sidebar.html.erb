<% if current_user.is_a?(GuestUser) %>
  <div class="sidebar-module sidebar-module-inset">
    <h4>About</h4>
    <p>Log in to be redirected to your area or select your area from the list below to continue.</p>
  </div>
<% end %>

<div class="sidebar-module">
  <h4>Locations</h4>

  <%= link_to "www.bestell.co.za", 'https://pdv-stell-frontend.herokuapp.com', class: 'nav-link-bus' %> (stellenbosch)

  <hr>

  <h4>Categories</h4>

  <% Category.order('name ASC').each do |cat| %>
    <%= link_to cat.name, location_businesses_path(location_id: @location, category: cat.name), class: 'nav-link-bus' %>
  <% end %>

</div>