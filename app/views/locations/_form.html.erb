<%= form_with(model: location, local: true) do |form| %>
  <% if location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :name, placeholder: "Name...", class: "form-control" %>
  </div>

  <div class="form-group">
    <label class="btn btn-primary">
      Upload an image or logo of your business <%= form.file_field :thumb_image, style: 'display:none;' %>
    </label>
  </div>

  <div class="form-group">
    <%= form.submit "Create Location", class: "btn btn-primary" %>
  </div>
<% end %>
